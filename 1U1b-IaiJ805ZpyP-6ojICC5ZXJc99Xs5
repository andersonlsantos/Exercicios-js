
/**
 * 06)​ Elabore duas funções que recebem três parâmetros: capital inicial, taxa de juros e tempo de aplicação. A
       primeira função retornará o montante da aplicação financeira sob o regime de juros simples e a segunda
       retornará o valor da aplicação sob o regime de juros compostos.
*/

function jurosSimples(capitalInicial, taxaDeJuros, tempoDeAplicação){
    //j = c * ta * te
    let juros = capitalInicial * taxaDeJuros * tempoDeAplicação
    const sifrao = 'R$'
    return sifrao + juros.toFixed(2)
}

console.log(jurosSimples(500, 0.2, 12))

function jurosComposto(capitalInicial, taxaDeJuros, tempoDeAplicação){
    let m = capitalInicial + taxaDeJuros
    let taxa = 1
    porcentagem = (taxaDeJuros / 100) * capitalInicial
    for(let i = 1; i <= tempoDeAplicação; i++){
        taxa *= (1 + porcentagem)
        //console.log(i)
    }
    let juros = m * taxa
    console.log(`R$${juros.toFixed(2)}`)
}

jurosComposto(30, 0.02, 5)
